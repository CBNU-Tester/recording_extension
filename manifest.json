{
    "name": "ChromeExtension",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "scripting",
      "identity",
      "identity.email",
      "alarms",
      "storage",
      "activeTab",
      "notifications"
    ],
    "host_permissions": [
      "https://www.google.com/*"
    ],
    "action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }