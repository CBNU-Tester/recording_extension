{
    "name": "Tester Recording",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "scripting",
      "storage",
      "activeTab",
      "notifications",
      "tabs",
      "system.display"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
        "default_icon": {
          "16": "images/icon16.png"
        }
  }
  }